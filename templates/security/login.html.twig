{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-4rem)] flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-3xl font-bold text-center mb-6">Connexion</h2>

            {% if error %}
                <div class="alert alert-error mb-4">
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info mb-4">
                    <span>Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="link">Se déconnecter</a></span>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mb-4">
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            <form method="post">
                <div class="form-control w-full mb-4">
                    <label for="username" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="input input-bordered w-full" autocomplete="email" required autofocus>
                </div>

                <div class="form-control w-full mb-6">
                    <label for="password" class="label">
                        <span class="label-text">Mot de passe</span>
                    </label>
                    <input type="password" name="_password" id="password" class="input input-bordered w-full" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary w-full">Se connecter</button>
                </div>
            </form>

            <div class="divider">OU</div>

            <p class="text-center">
                Vous n'avez pas de compte ?
                <a href="{{ path('app_register') }}" class="link link-primary">S'inscrire</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
